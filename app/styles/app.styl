body
  background-color: background-color
  color: white-font

a
  color: white
  text-decoration: none

  &:visited
    color: white

ul
  list-style-type: none

.vertical-button-container
  display: inline

  button
    display: block
    margin: 5px 0
    width: 110px

.menu-header
  height: master-track-height
  padding: 0 10px
  background-color: darkgrey-background
  border-bottom: 1px solid #444
  line-height: 40px
  font-size: 18px

  .close
    float: right
    font-size: 13px
    cursor: pointer
  
.logo
  margin: 50px 0
  text-align: center
  
.full-button
  padding: .9rem 4rem
  
  i 
    margin-right: 20px
    font-size: 1.5em
  
.center
  text-align: center
  
.profile-picture
  width: 25px
  height: 25px
  margin-top: 5px
  margin-bottom: 5px
  float: left
  margin-right: 5px
  
  &.large
    width: 40px
    height: 40px
    margin-left: 5px
    
.chat-input
  width: 220px
  margin: 8px 0

.chat-button
  margin: 8px 0 !important
  
.chats 
  padding: 10px 20px
  
.boxed
  margin-bottom: 30px

.profile-picture-large
  width: 100px
  height: 100px
  margin-top: 40px
  
.profile-picture-thumb
  width: 25px
  height: 25px
  float: left
  margin-right: 10px
  
ul.list
  background: lighter-darkgrey-background
  border-radius: 5px
  border-top: 1px solid grey-highlight
  
  li
    text-align: left
    border-bottom: 1px solid darkgrey-background
    border-top: 1px solid grey-background
    padding: 10px 20px
    
    &:last-child
      border-bottom: none